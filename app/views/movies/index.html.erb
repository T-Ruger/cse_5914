<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Poster url</th>
      <th>Title</th>
      <th>Short desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= image_tag("https://image.tmdb.org/t/p/w154" + movie.poster_url, :alt => movie.title) %></td>
        <td><%= movie.title %></td>
        <td><%= movie.short_desc %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Remove', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

